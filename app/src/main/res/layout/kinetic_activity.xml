<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gyro1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <TextView
            android:id="@+id/gyro2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <TextView
            android:id="@+id/gyro3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <TextView
            android:id="@+id/accel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <TextView
            android:id="@+id/accel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <TextView
            android:id="@+id/accel3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <TextView
            android:id="@+id/angle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <TextView
            android:id="@+id/angle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <TextView
            android:id="@+id/angle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" />

        <EditText
            android:id="@+id/tag_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="tag名称"/>


        <TextView
            android:id="@+id/tvstep_value"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />


        <TextView
            android:id="@+id/tvsteps"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />


        <RelativeLayout
            android:id="@+id/controll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始"
                android:padding="10dp"/>

            <Button
                android:id="@+id/btn_stop"
                android:layout_toRightOf="@+id/btn_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:text="停止"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出"
                android:layout_toRightOf="@+id/btn_stop"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:id="@+id/btn_export"/>

        </RelativeLayout>


    </LinearLayout>

</ScrollView>